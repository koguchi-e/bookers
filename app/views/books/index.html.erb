<!DOCTYPE html>
<html>
<head>
    <title>Books</title>
</head>
<body>

<h1>Books</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |item| %>
        <tr class="field">
            <td class="title"><%= item.title %></td>
            <td class="body"><%= item.body %></td>
            <td class="link">
                <span class="link"><%= link_to "Show", book_path(item.id) %></span>
                <span class="link"><%= link_to "Edit", edit_book_path(item.id) %></span>
                <span class="link"><%= link_to "Destroy", book_path(item.id), method: :delete, data: { confirm: "Are you sure?", turbolinks: false } %></span>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<h2>New Book</h2>

<% if @book.errors.any? %>
  <div class="error-messages">
    <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, local: true do |f| %>
  <div class="field">
    <label for="book_title">Title</label><br>
    <%= f.text_field :title, id: "book_title" %>
  </div>

  <div class="field">
    <label for="book_body">Body</label><br>
    <%= f.text_area :body, id: "book_body" %>
  </div>

  <div class="actions">
    <%= f.submit "Create Book" %>
  </div>
<% end %>

</body>
</html>