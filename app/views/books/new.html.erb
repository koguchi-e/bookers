<h1>Books</h1>
<tabel>
    <tr>
        <td><b>Title</b></td>
        <td><b>Body</b></td>
        <td></td>
    </tr>
    <tr>
        <% @books.each do |book| %>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td>
                <%= link_to "Show", book_path(book.id) %>
                <%= link_to "Edit", edit_book_path(@book.id) %>
                <%= link_to "Destroy", destroy_book_path(@book.id) method: :delete, "data-confirm" => "Are you sure?" %>
            </td>
        <% end %>
    </tr>
</tabel>

<h2>New book</h2>
<%= form_with model: Book.new do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit "Create Book" %>
<% end %>
