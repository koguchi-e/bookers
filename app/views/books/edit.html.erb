<h1>Editing Book</h1><br>

<%= form_with model: @book do |f| %>

    <label>Title</label><br>
    <%= f.text_field :title %><br>

    <label>Body</label><br>
    <%= f.text_area :body %><br>

    <%= f.submit "Update Book" %>
<% end %>

<span class="link"><%= link_to "Show", book_path(@book.id) %></span>|
<span class="link"><%= link_to "Back", books_path %></span>